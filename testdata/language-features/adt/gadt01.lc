  V1_ :: a -> V 1 a
  V2_ :: a -> a -> V 2 a

data M :: Type -> String -> Type where
  Value :: a -> forall m . M a m

data M2 (a :: Type) :: String -> Type where
  Value2 :: a -> forall m . M2 a m

data M3 (a :: Type) :: String -> Type where
  Value3 :: forall m . a -> M3 a m

-- g (Value2 x) = x
