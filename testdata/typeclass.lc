{-# LANGUAGE NoImplicitPrelude #-}
import Internals hiding ('Eq, (==))

data List a = Nil | Cons a (List a)

infix 4 ==, /=, <
infixr 3 &&
infixr 2 ||

not True = False
not False = True

True && a = a
False && _ = False

False || a = a
True || _ = True

class Eq a where
    (==) :: a -> a -> Bool

a /= b = not (a == b)

instance Eq Bool where
    True == a = a
    False == a = not a
